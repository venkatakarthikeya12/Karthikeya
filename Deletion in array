#include<stdio.h>
  int main() {
  int n;
  printf("enter a size of an array :");
  scanf("%d",&n);
  int a[n];
  printf("enter a elements in array:");
  for(int i=0;i,n;i++) {
    scanf("%d",&a[i]); }
  int p;
  printf("enter a position to delete an element in array:");
  scanf("%d",&p);
  for(int i=0;i<n;i++) {
    a[p] = a[p+1]; }
  n--;
  for(int i=0;i<n;i++) 
    printf(" new array : %d",a[i]);
  return 0;

  INPUT : enter a size of an array : 5
          enter a elements in an array : 5 6 8 2 7

  OUTPUT : enter a position to delete an element in array : 2
          new array : 5 6 2 7
    
